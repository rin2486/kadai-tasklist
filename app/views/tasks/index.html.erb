

<% if logged_in? %>
  <p>ログイン中のユーザ: <%= current_user.name %></p>
  
  <!--ここにタスクリスト表示-->

    <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <p>タスク名</p>
          <%= f.text_area :content, class: 'form-control', rows: 2 %>
        </div>
        <div class="form-group">
          <p>ステータス</p>
          <%= f.text_area :status, class: 'form-control', rows: 2 %>
        </div>
        <%= f.submit 'タスクを登録', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
  
<!--      <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="nav-link">tasklist</a></li>
    </ul>
  </div>
-->
  
<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the tasks</h1>
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>
