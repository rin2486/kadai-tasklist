<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= current_user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>タスクID    <%= task.id %></p>
          <p>タスク名:   <%= task.content %></p>
          <p>ステータス: <%= task.status %></p>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <%= link_to "Edit", edit_task_path(task), class: 'btn btn-warning btn-sm' %>
            <%= link_to "Info", task_path(task), class: 'btn btn-info btn-sm' %>
          <% end %>
        </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>

